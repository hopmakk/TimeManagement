            <Grid Grid.Column="0" x:Name="MenuPanel" Background="{StaticResource Color_3}" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

