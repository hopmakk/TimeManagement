<Page x:Class="TimeManagement.Pages.StartPages.BaseSettingsSetterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeManagement.Pages.StartPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BaseSettingsSetterPage">

    <Page.Resources>

    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Margin="10" Width="40" Style="{StaticResource ButtonRect_gray}" HorizontalAlignment="Left" Click="Back_Click">
            <TextBlock Text="❮" Margin="-2,0,0,-2" VerticalAlignment="Center" HorizontalAlignment="Center"
FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_6}"/>
        </Button>

        <Border Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <StackPanel>
                <TextBlock Text="Введите базовый URL для YouTrack" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>

                <Grid Height="40" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Margin="20,3,20,3" BorderThickness="1" BorderBrush="{StaticResource Color_2}">
                        <TextBox x:Name="TB" Text="https://youtrack.sovcombank.ru/" Foreground="{StaticResource Color_1}" FontSize="20" Background="Transparent" BorderBrush="Transparent"/>
                    </Border>

                    <Button Grid.Column="1" Name="B_NextPage" Style="{StaticResource ButtonRect_green}" Click="NextPage_Click">
                        <TextBlock Text="Далее" Margin="10,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Center"
FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_6}"/>
                    </Button>
                </Grid>

                <TextBlock x:Name="Ahtung" Text="Введен некорректный токен или базовый URL" Margin="0,5,0,0" Visibility="Hidden" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_Red}"/>
                <TextBlock x:Name="Ahtung2" Text="Или есть проблемы с подключением к YouTrack" Margin="0,5,0,0" Visibility="Hidden" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_Red}"/>

            </StackPanel>
        </Border>


        <Button Grid.Row="2" Margin="10" Style="{StaticResource ButtonRect_gray}" Width="180" Click="B_WhatIsBaseUrl_Click">
            <TextBlock Text="Как его узнать?" Margin="10,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Center"
FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_6}"/>
        </Button>
    </Grid>
</Page>
