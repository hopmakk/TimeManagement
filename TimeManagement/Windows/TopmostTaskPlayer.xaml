<Window x:Class="TimeManagement.Windows.TopmostTaskPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManagement.Windows"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Topmost="True" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" ShowInTaskbar="False"
        Title="" Height="90" Width="320" MinWidth="68">

    <Window.Resources>
        
    </Window.Resources>
    
    
    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="65"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                <GradientStop Color="#FF1B1B1B" Offset="0"/>
                <GradientStop Color="#FF212121" Offset="1"/>
                <GradientStop Color="#FF323232" Offset="0.537"/>
            </LinearGradientBrush>
        </Grid.Background>


        <Grid Grid.Row="0" Background="#FF6A616F" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            
            <Grid Grid.Column="2">
                <Button Height="35" Click="MinimButton_Click" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <TextBlock Text="-" VerticalAlignment="Bottom" Margin="0,0,0,-9" HorizontalAlignment="Center" FontSize="50" FontFamily="{StaticResource MainFont}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource Color_2}"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource Color_1}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
        </Grid>
        

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="TaskButton" Click="TaskButton_Click" Style="{StaticResource ButtonRectVolume1}" Height="42"/>

            <Grid Grid.Column="1" Margin="0,5,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <!--Название задачи-->
                    <TextBlock FontSize="20" Margin="10,0,5,0" Text="{Binding SelectedTaskInfo.TaskId}" FontFamily="{StaticResource MainFont}" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{StaticResource Color_1}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTaskInfo.IsActive}" Value="true">
                                        <Setter Property="Foreground" Value="{StaticResource Color_Pink}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FFF2DCFF" ShadowDepth="0" Direction="0" BlurRadius="5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    
                    <!--Кнопка выбрать другие задачи-->
                    <Button Grid.Row="1" Click="ShowMoreTasks_Click" Margin="0,-1,0,0" Style="{StaticResource ButtonRect_gray}">
                        <TextBlock Text="..." Margin="3,-3,3,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>
                    </Button>
                </StackPanel>

                <TextBlock Grid.Row="1" Text="{Binding SelectedTaskInfo.StandartWorkType.Name}" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="13" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>
            </Grid>

            <TextBlock Grid.Column="2" x:Name="TB_UntrackedTime" Text="{Binding SelectedTaskInfo.UntrackedTime}" Margin="15,0,10,0" VerticalAlignment="Center" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_Yellow}" HorizontalAlignment="Right"/>

            <Grid Grid.Column="3">
                <Button Height="35" Click="OpenMainWindowButton_Click" Margin="3" HorizontalAlignment="Right" VerticalAlignment="Center" BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <TextBlock Text="❐" VerticalAlignment="Bottom" Margin="0,0,0,-2" HorizontalAlignment="Center" FontSize="37" FontFamily="{StaticResource MainFont}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource Color_2}"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource Color_1}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>


        <Grid Grid.Row="3" Background="{StaticResource Color_6}">
            <ScrollViewer Grid.Row="3" Margin="10" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                <ItemsControl x:Name="TaskItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>

                            <Grid Height="30" MouseLeftButtonDown="TaskListItem_MouseLeftButtonDown">
                                <Grid Margin="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="▶" Margin="3,0,0,0" VerticalAlignment="Center" FontSize="20" FontFamily="{StaticResource MainFont}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource Color_3}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="true">
                                                        <Setter Property="Foreground" Value="{StaticResource Color_1}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Grid.Column="1" Text="{Binding TaskId}" Margin="10,0,15,0" VerticalAlignment="Center" FontSize="20" FontFamily="{StaticResource MainFont}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource Color_3}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="true">
                                                        <Setter Property="Foreground" Value="{StaticResource Color_2}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Grid.Column="2" Text="{Binding Name}" VerticalAlignment="Center" FontSize="20" FontFamily="{StaticResource MainFont}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource Color_3}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="true">
                                                        <Setter Property="Foreground" Value="{StaticResource Color_2}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>

                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Background" Value="{StaticResource Color_6}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource Color_5}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                            </Grid>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

    </Grid>
</Window>
