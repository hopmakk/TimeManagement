    <SolidColorBrush x:Key="Color_3" Color="#7f7f7f"/>
    <SolidColorBrush x:Key="Color_4" Color="#5f5f5f" />
    <SolidColorBrush x:Key="Color_5" Color="#3f3f3f" />
    <SolidColorBrush x:Key="Color_6" Color="#FF141414" />
    
    <SolidColorBrush x:Key="Color_Synchr" Color="White" />
    <SolidColorBrush x:Key="Color_NotSynchr" Color="#FFFFF6CC" />
    <SolidColorBrush x:Key="Color_Archive" Color="#becaf3" />
    <SolidColorBrush x:Key="Color_Deleted" Color="#f7a6a8" />
    
    <SolidColorBrush x:Key="Color_Yellow" Color="#FFFFFDC4" />
    <SolidColorBrush x:Key="Color_Red" Color="#FFFB9A9A" />
    <SolidColorBrush x:Key="Color_Green" Color="#FFB0CE87" />
    <SolidColorBrush x:Key="Color_Blue" Color="#FFC4E1FF" />
    <SolidColorBrush x:Key="Color_Pink" Color="#FFD9C4FF" />
    
    <SolidColorBrush x:Key="Color_DarkYellow" Color="#FF2E2E1B" />
    <SolidColorBrush x:Key="Color_DarkRed" Color="#FF3A2222" />
    <SolidColorBrush x:Key="Color_DarkGreen" Color="#FF223A22" />
    <SolidColorBrush x:Key="Color_DarkBlue" Color="#FF1B292E" />
    <SolidColorBrush x:Key="Color_DarkPink" Color="#FF271B2E" />



    <!--<FontFamily x:Key="MainFont">Comic Sans MS</FontFamily>-->
    <FontFamily x:Key="MainFont"></FontFamily>

    <SolidColorBrush x:Key="BlueColor" Color="#FF3A65FF" />
    <SolidColorBrush x:Key="LightBlueColor" Color="#FF86A0FF" />
    <SolidColorBrush x:Key="LightLightBlueColor" Color="#BFCDFF" />
    <SolidColorBrush x:Key="AliceBlueColor" Color="#FFEAF6FF" />
    <SolidColorBrush x:Key="LitleWhiteColor" Color="#FFE8EDFF" />

    <Style x:Key="MainFontText">
        <Setter Property="TextElement.FontFamily" Value="{StaticResource MainFont}"/>
        <Setter Property="TextElement.FontSize" Value="20"/>
        <Setter Property="TextElement.Foreground" Value="{StaticResource LightBlueColor}"/>
    </Style>


    <Style x:Key="SelectedFontText">
        <Setter Property="TextElement.FontFamily" Value="{StaticResource MainFont}"/>
        <Setter Property="TextElement.FontSize" Value="20"/>
        <Setter Property="TextElement.Foreground" Value="{StaticResource BlueColor}"/>
    </Style>


    <Style TargetType="Button" x:Key="ButtonTemplate">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">

                    <Border BorderBrush="{StaticResource LightBlueColor}" CornerRadius="10"
                    TextBlock.Foreground="{StaticResource LightBlueColor}" Background="White">
                        <ContentPresenter RecognizesAccessKey="True" HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="Button" x:Key="ButtonRect_blue">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border TextBlock.Foreground="{StaticResource Color_3}" Background="{StaticResource Color_5}" BorderBrush="{StaticResource Color_6}"
 BorderThickness="1" CornerRadius="3">
                        <Border Margin="0,0,0,0" CornerRadius="3" Background="{StaticResource Color_Blue}">
                            <Grid>
                                <TextBlock FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_5}" HorizontalAlignment="Center" VerticalAlignment="Center">
         <ContentPresenter RecognizesAccessKey="True" HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="ButtonRect_green">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border BorderBrush="{StaticResource Color_6}" BorderThickness="1" CornerRadius="3">
                        <Border CornerRadius="3" Background="{StaticResource Color_Green}">
                            <Grid>
                                <TextBlock FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_5}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter RecognizesAccessKey="True" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


