<Window x:Class="TimeManagement.Windows.AutoReportSendCompleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManagement.Windows"
        mc:Ignorable="d"
        Topmost="True" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Title="" Height="340" Width="400">

    <Window.Resources>

    </Window.Resources>


    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                <GradientStop Color="#FF1B1B1B" Offset="0"/>
                <GradientStop Color="#FF212121" Offset="1"/>
                <GradientStop Color="#FF323232" Offset="0.537"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="Автотрек" Margin="10,10,10,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>
                <TextBlock x:Name="TB_MainDate" Text="" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_3}"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" Margin="10,0,10,6" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" Background="{StaticResource Color_6}">
                <ItemsControl x:Name="TaskItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>


                            <Grid Margin="5,5,5,0">
                                <Grid.Background>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#FF252525"/>
                                        <GradientStop Color="#FF383838" Offset="1"/>
                                    </LinearGradientBrush>
                                </Grid.Background>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <!--COMMENT FEATURE-->
                                        <!--<ColumnDefinition/>-->
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding TaskId}" Margin="5" FontSize="20" FontFamily="{StaticResource MainFont}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource Color_2}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SendSuccess}" Value="None">
                                                        <Setter Property="Foreground" Value="{StaticResource Color_2}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SendSuccess}" Value="Sending">
                                                        <Setter Property="Foreground" Value="{StaticResource Color_Yellow}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SendSuccess}" Value="Success">
                                                        <Setter Property="Foreground" Value="{StaticResource Color_Green}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SendSuccess}" Value="Error">
                                                        <Setter Property="Foreground" Value="{StaticResource Color_Red}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="+" Margin="0" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_Green}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding UntrackedTime}" Margin="0" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_Green}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!--COMMENT FEATURE-->
                                    <!--<Button Grid.Column="2" Click="OpenComment_Click" Margin="10,5,10,5" Style="{StaticResource ButtonRect_green}" ToolTip="Оставить комментарий по этому списанию времени">
                                        <TextBlock Text="+Комментарий" Margin="7,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_6}"/>
                                    </Button>-->
                                </Grid>

                                <!--COMMENT FEATURE-->
                                <!--<Grid Name="CommentPanel" Height="0" Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="238"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Margin="5,0,5,5" BorderThickness="1" BorderBrush="{StaticResource Color_2}">
                                        <TextBox x:Name="TB_Comment" Margin="0,-5,0,0" Foreground="{StaticResource Color_1}" FontSize="20" Background="Transparent" BorderBrush="Transparent"/>
                                    </Border>

                                    <Button Grid.Column="1" Click="ChangeWorkEventDescription_Click" Margin="10,0,10,5" Style="{StaticResource ButtonRect_green}" ToolTip="Оставить комментарий по этому списанию времени">
                                        <TextBlock Text="Применить" Margin="7,-1,10,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_6}"/>
                                    </Button>
                                </Grid>-->
                            </Grid>


                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Button Grid.Row="2" x:Name="OkButton" Click="OkButton_Click" Margin="10" Style="{StaticResource ButtonRect_gray}" Height="30" Width="100">
                <TextBlock Text="Понятно" Margin="10,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_6}"/>
            </Button>

        </Grid>
    </Grid>
</Window>
