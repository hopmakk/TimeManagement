<Page x:Class="TimeManagement.Pages.NotificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeManagement.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NotificationPage">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Заголовок-->
            <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource Color_5}">
                <TextBlock Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="27" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_3}"/>
            </Border>
            
            <!--Верхняя панель-->
            <Grid Grid.Row="0" Grid.Column="1" Background="{StaticResource Color_5}">
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">

                    <Button x:Name="B_SendToDeveloper" Margin="7" Click="SendToDeveloper_Click" Style="{StaticResource ButtonRect_gray}" Visibility="Hidden">
                        <TextBlock Text="Отправить разработчику" Margin="10,3,10,3" VerticalAlignment="Center" HorizontalAlignment="Center"
FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_6}"/>
                    </Button>
                    
                    <Button Margin="7" Click="DeleteAll_Click" Style="{StaticResource ButtonRect_gray}">
                        <TextBlock Text="Очистить всё" Margin="10,3,10,3" VerticalAlignment="Center" HorizontalAlignment="Center"
FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_6}"/>
                    </Button>
                    
                </StackPanel>
            </Grid>

            <!--Список с уведомлениями--> 
            <ScrollViewer Grid.Row="1" Grid.Column="0" Margin="10,15,0,5" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                <Grid>
                    <ItemsControl x:Name="NotificationsItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>


                                <Border MouseLeftButtonDown="Notif_MouseLeftButtonDown" BorderThickness="2" Margin="0,5,0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="30"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding TypeStr}" VerticalAlignment="Center" FontSize="20" Margin="10" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>

                                        <TextBlock Grid.Column="1" Text="{Binding CreateTime}" VerticalAlignment="Center" FontSize="20" Margin="0" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>

                                        <Button Grid.Column="2" Click="DeleteNotif_Click" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <TextBlock Text="×" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="25" FontFamily="{StaticResource MainFont}">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Foreground" Value="{StaticResource Color_3}"/>
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="Foreground" Value="{StaticResource Color_1}"/>
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>

                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderBrush" Value="Gray"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Type}" Value="Success">
                                                    <Setter Property="BorderBrush" Value="{StaticResource Color_Green}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Hint">
                                                    <Setter Property="BorderBrush" Value="{StaticResource Color_Blue}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Warning">
                                                    <Setter Property="BorderBrush" Value="{StaticResource Color_Yellow}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Error">
                                                    <Setter Property="BorderBrush" Value="{StaticResource Color_Red}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Success">
                                                    <Setter Property="Background" Value="{StaticResource Color_DarkGreen}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Hint">
                                                    <Setter Property="Background" Value="{StaticResource Color_DarkBlue}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Warning">
                                                    <Setter Property="Background" Value="{StaticResource Color_DarkYellow}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="Error">
                                                    <Setter Property="Background" Value="{StaticResource Color_DarkRed}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>


                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>


            <!--Текст уведомления-->
            <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="20" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
                <Grid x:Name="SelectedNotificationGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Rectangle Grid.Row="0" Width="1" Fill="{StaticResource Color_5}"/>

                    <Grid Grid.Column="1" Margin="10,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="{Binding Title}" VerticalAlignment="Center" FontSize="27" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_3}"/>
                        <TextBlock Grid.Row="1" Text="{Binding Message}" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_3}" TextWrapping="Wrap"/>

                    </Grid>

                </Grid>
            </ScrollViewer>

        </Grid>
    </Grid>
</Page>
