<Window x:Class="TimeManagement.Windows.NewsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManagement.Windows"
        mc:Ignorable="d"
        Topmost="True" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Title="" Height="620" Width="550">

    <Border BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                <GradientStop Color="#FFFFB6B2"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FFE2FFC7" Offset="0.269"/>
                <GradientStop Color="#FFA7FFE5" Offset="0.474"/>
                <GradientStop Color="#FFA8BAFF" Offset="0.623"/>
                <GradientStop Color="#FFCAADFF" Offset="0.776"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.Background>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="#FF1B1B1B" Offset="0"/>
                    <GradientStop Color="#FF212121" Offset="1"/>
                    <GradientStop Color="#FF323232" Offset="0.537"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock x:Name="TB_Version" Text="" Margin="10,20,10,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold" FontFamily="{StaticResource MainFont}">
                        <TextBlock.Foreground>
                            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                <GradientStop Color="#FFFFB6B2"/>
                                <GradientStop Color="White" Offset="1"/>
                                <GradientStop Color="#FFE2FFC7" Offset="0.269"/>
                                <GradientStop Color="#FFA7FFE5" Offset="0.474"/>
                                <GradientStop Color="#FFA8BAFF" Offset="0.623"/>
                                <GradientStop Color="#FFCAADFF" Offset="0.776"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock x:Name="TB_MainDate" Text="Список изменений" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_3}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="10,0,10,6" Background="{StaticResource Color_6}">
                    <TextBlock Text="Нововведения" Margin="10,15,10,0" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_1}"/>
                    <TextBlock Text="1) Выбор задачи прямо из плеера" Margin="10,5,10,0" FontSize="16" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>
                    <TextBlock Text="2) Двойной клик по задаче для открытия и закрытия логов" Margin="10,5,10,0" FontSize="16" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>
                    <TextBlock Text="3) Возможность Выделить\Отменить все задачи в ручном треке" Margin="10,5,10,0" FontSize="16" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>
                    <TextBlock Text="" Margin="10,5,10,0" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>

                    <TextBlock Text="Доработки" Margin="10,5,10,0" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_1}"/>
                    <TextBlock Text="1) Улучшен UI/UX архива и основной страницы" Margin="10,5,10,0" FontSize="16" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>
                    <TextBlock Text="2) Кастомный размер плеера" Margin="10,5,10,0" FontSize="16" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>
                    <TextBlock Text="" Margin="10,5,10,0" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>

                    <TextBlock Text="Исправления багов" Margin="10,5,10,0" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_1}"/>
                    <TextBlock Text="1) Отчет за прошлый день отсылался датой сегодняшнего дня" Margin="10,5,10,0" FontSize="16" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>
                    <TextBlock Text="2) Дата в заголовке приложения не менялась с течением дней" Margin="10,5,10,0" FontSize="16" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>
                    <TextBlock Text="" Margin="10,5,10,0" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>

                    <TextBlock Text="От разработчика" Margin="10,5,10,0" FontSize="20" FontFamily="{StaticResource MainFont}" HorizontalAlignment="Center" Foreground="{StaticResource Color_1}"/>
                    <TextBlock Text="Спасибо всем, кто делится идеями для улучшения приложения." Margin="10,5,10,0" FontSize="16" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Пишите мне о доработках и багах, чтобы трек времени стал еще" Margin="10,5,10,0" FontSize="16" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}" HorizontalAlignment="Center"/>
                    <TextBlock Text="удобнее. Мои контакты вы найдете в разделе ''Информация''." Margin="10,5,10,0" FontSize="16" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}" HorizontalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Row="2" x:Name="OkButton" Click="OkButton_Click" Margin="10" Style="{StaticResource ButtonRect_gray}" Height="30" Width="100">
                    <TextBlock Text="Понятно" Margin="10,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_6}"/>
                </Button>

            </Grid>
        </Grid>
    </Border>

</Window>
