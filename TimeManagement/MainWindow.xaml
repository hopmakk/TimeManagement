<Window x:Class="TimeManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeManagement"
        mc:Ignorable="d"
        Icon="pack://application:,,,/image.ico"
        Closing="Window_Closing" WindowStartupLocation="CenterScreen"
        Title="TaskTracker" Height="750" Width="800" MinWidth="307">

    <Window.Resources>
        <Style TargetType="Button" x:Key="ButtonRoundVolume1">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border TextBlock.Foreground="{StaticResource Color_3}" Background="{StaticResource Color_3}" BorderBrush="{StaticResource Color_4}"
                                BorderThickness="2" CornerRadius="10">
                            <Border Margin="0,0,0,7" CornerRadius="10" Background="{StaticResource Color_2}">
                                <Grid>
                                    <ContentPresenter RecognizesAccessKey="True" HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                                </Grid>
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="ButtonNavigate">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border TextBlock.Foreground="{StaticResource Color_3}" Background="{StaticResource Color_5}" BorderBrush="{StaticResource Color_6}"
                        BorderThickness="1.5" CornerRadius="0">
                            <Border Margin="0,0,0,5" CornerRadius="0" Background="#FF877E8C">
                                <Grid>
                                    <TextBlock FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_5}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter RecognizesAccessKey="True" HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>



    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--HEADER-->
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                    <GradientStop Color="#FF888888"/>
                    <GradientStop Color="#FF8C868E" Offset="1"/>
                    <GradientStop Color="#FF6F6F6F"/>
                    <GradientStop Color="#FFA092A4" Offset="0.838"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="85"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding MainClock}" Grid.Column="0" FontSize="55" HorizontalAlignment="Left" VerticalAlignment="Center" 
                       FontWeight="Bold" Foreground="White" FontFamily="{StaticResource MainFont}" Margin="10,0,0,0"/>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" x:Name="DayOfWeekTB" Text="ПН" FontWeight="Bold" FontFamily="{StaticResource MainFont}" Foreground="White" FontSize="20"
                           VerticalAlignment="Bottom"/>
                <TextBlock Grid.Row="1" x:Name="DateTB" Text="00.00" FontFamily="{StaticResource MainFont}" Foreground="White" FontSize="20"
                            VerticalAlignment="Top"/>
            </Grid>


            <!--RIGHT PANEL-->
            <Grid Grid.Column="3">

            </Grid>

        </Grid>


        <Rectangle Grid.Row="1" Fill="{StaticResource Color_6}"/>


        <Grid Grid.Row="2">
            <Grid.Background>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="#FF1B1B1B" Offset="0"/>
                    <GradientStop Color="#FF212121" Offset="1"/>
                    <GradientStop Color="#FF323232" Offset="0.537"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="NavPanel" Width="50"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

