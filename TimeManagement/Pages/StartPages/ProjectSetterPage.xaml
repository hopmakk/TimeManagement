<Page x:Class="TimeManagement.Pages.StartPages.ProjectSetterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeManagement.Pages.StartPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectSetterPage">

    <Page.Resources>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Margin="10" Width="40" Click="Back_Click" Style="{StaticResource ButtonRect_gray}" HorizontalAlignment="Left">
            <TextBlock Text="❮" Margin="-2,0,0,-2" VerticalAlignment="Center" HorizontalAlignment="Center"
FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_6}"/>
        </Button>

        <Border Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <StackPanel>
                <TextBlock Text="Выберите проект" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_2}"/>

                <Border Grid.Row="2" Margin="50" >
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <Rectangle Grid.Row="3" Height="1" MaxWidth="300" Fill="{StaticResource Color_3}"/>

                            <StackPanel x:Name="ProjectsList" Margin="10">
                                <StackPanel.Resources>
                                    <Style TargetType="TextBlock" x:Key="DateTextBlockStyle">
                                        <Setter Property="Margin" Value="5"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontSize" Value="20"/>
                                        <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
                                        <Setter Property="Foreground" Value="{StaticResource Color_3}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource Color_1}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Resources>
                            </StackPanel>

                            <Rectangle Grid.Row="3" Height="1" MaxWidth="300" Fill="{StaticResource Color_3}"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <TextBlock x:Name="Ahtung" Text="Не удаётся отправить запрос" Margin="0,5,0,0" Visibility="Hidden" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_Red}"/>
                <TextBlock x:Name="Ahtung2" Text="Проекты не найдены" Margin="0,5,0,0" Visibility="Hidden" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_Red}"/>

            </StackPanel>
        </Border>

    </Grid>
</Page>
