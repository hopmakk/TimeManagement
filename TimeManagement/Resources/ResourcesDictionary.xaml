    <Style TargetType="Button" x:Key="ButtonRect_pink">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border TextBlock.Foreground="{StaticResource Color_3}" Background="{StaticResource Color_5}" BorderBrush="{StaticResource Color_6}"
BorderThickness="1" CornerRadius="3">
                        <Border Margin="0,0,0,0" CornerRadius="3">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1.5,1.5" StartPoint="-0.5,-0.5">
                                    <GradientStop Color="#FFD9C4FF" Offset="0"/>
                                    <GradientStop Color="#FFEADEFF" Offset="3.5" x:Name="GradientWhiteBlik"/>
                                    <GradientStop Color="#FFB185FF" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <TextBlock FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="{StaticResource Color_5}" HorizontalAlignment="Center" VerticalAlignment="Center">
        <ContentPresenter RecognizesAccessKey="True" HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>

                        <!--<Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard Name="BlinkStoryBoard">
                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetName="GradientWhiteBlik" Storyboard.TargetProperty="Offset"
                                                                     From="0" To="1" Duration="0:0:2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="BlinkStoryBoard"/>
                            </Trigger.ExitActions>
                        </Trigger>-->

                        <!-- Автоматическая анимация при загрузке -->
                        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                    <DoubleAnimation Storyboard.TargetName="GradientWhiteBlik" 
                                                 Storyboard.TargetProperty="Offset"
                                                 From="0" To="1" Duration="0:0:3" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    
    

    <Style TargetType="Button" x:Key="ButtonRectVolume1">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{StaticResource Color_5}" BorderBrush="{StaticResource Color_6}"
                        BorderThickness="1.5" CornerRadius="0">
                        <Border Margin="0,0,0,5" CornerRadius="0" Background="#FF877E8C">
                            <Grid>
                                <TextBlock Text=" ▶" FontSize="20" FontFamily="{StaticResource MainFont}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter RecognizesAccessKey="True" HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{StaticResource Color_5}"/>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="ButtonRectVolumeActive1">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border TextBlock.Foreground="{StaticResource Color_3}" Background="{StaticResource Color_5}" BorderBrush="{StaticResource Color_6}"
                BorderThickness="1.5" CornerRadius="0" Margin="0,3,0,0">
                        <Border Margin="0,0,0,3" CornerRadius="0" Background="#FF6A616F">
                            <Grid>
                                <TextBlock Text="▎ ▎" Margin="0,0,0,2" FontSize="20" FontFamily="{StaticResource MainFont}" Foreground="#FFDEC8FF" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#FFF2DCFF" ShadowDepth="0" Direction="0" BlurRadius="10"  />
                                    </TextBlock.Effect>
                                  <ContentPresenter RecognizesAccessKey="True" HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!--<EventTrigger RoutedEvent="FrameworkElement.Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                    <DoubleAnimation Storyboard.TargetName="GradientWhiteBlik" 
                         Storyboard.TargetProperty="Offset"
                         From="0" To="1" Duration="0:0:3" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>-->

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>